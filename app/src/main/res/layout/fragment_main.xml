<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/fragment_main_image_vertical_margin">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_main_image_height"
            android:src="@drawable/vietnam"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_location"
            android:textSize="@dimen/textsize_title"
            android:layout_gravity="center"/>
    </LinearLayout>

    <GridView
        android:id="@+id/options_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:layout_margin="@dimen/fragment_main_option_margin"
        android:verticalSpacing="100px"
        android:stretchMode="columnWidth"
        />
</LinearLayout>